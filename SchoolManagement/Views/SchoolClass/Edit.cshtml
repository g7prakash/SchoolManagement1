@using SchoolManagement.Models.Extensions
@using static SchoolManagement.Models.Enums.MenuItems
@model StudentManagement.Models.SchoolClass

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <h4>Edit SchoolClass</h4>
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Section" class="control-label"></label>
                <select asp-for="Section" class="form-control" asp-items="(List<SelectListItem>)EnumHelper.GetSelectListFromEnum<ClassSection>()"></select>
                <span asp-validation-for="Section" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="mt-5 mb-3 btn btn-primary">Save</button>
                <a asp-action="Index" class="mt-5 mb-3 btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
